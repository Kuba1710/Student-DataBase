<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentApp_v2.Views.LoginPage"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             >

    <ContentPage.Content>
        <Frame>

            <StackLayout Padding="40" VerticalOptions="Center">
                <Label Text="Index:" Style="{StaticResource LoginLabel}"/>
                <Entry x:Name ="indexEntry"  Style="{StaticResource loginEntry}" Placeholder="Your Index..." />
                <Label Text="Password: "  Style="{StaticResource LoginLabel}" />
                <Entry x:Name ="passwordEntry"  IsPassword="True" Style="{StaticResource loginEntry}" Placeholder="Your Password..." />
                <Button x:Name="loginButton" Text="Log in" Clicked="LoginClicked" Style="{StaticResource LoginFormButton}"  />
<!--Login Error message-->
                <Frame x:Name="errorFrame" IsVisible="False" Style="{StaticResource errorMessage}" >
                    <Label x:Name="messageLabel" Style="{StaticResource errorText}" />
                </Frame>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>