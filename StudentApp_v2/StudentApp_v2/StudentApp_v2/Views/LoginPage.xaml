<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"          
             x:Class="StudentApp_v2.Views.LoginPage"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             >
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center">
            <Label Text="E-mail:" />
            <Entry x:Name ="emailEntry" Placeholder="E-mail" />
            <Label Text="Password: " />
            <Entry x:Name ="passwordEntry"  IsPassword="True" Placeholder="Password" />
            <Button Text="Login" Clicked="LoginClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>